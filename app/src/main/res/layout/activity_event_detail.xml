<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_activity"
              android:orientation="vertical"
              android:padding="@dimen/margin_twenty">


    <com.app.gitevent.customViews.GitTextView
        android:id="@+id/txtVw_initial"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="@dimen/margin_twelve"
        android:background="@drawable/ic_round_slot"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/font_eighteen"
        android:textStyle="bold"
        android:transitionName="@string/transition_detail_initials"
        tools:text="P"/>

    <com.app.gitevent.customViews.GitTextView
        android:id="@+id/txtVw_eventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_twenty"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="@dimen/font_twenty"
        android:textStyle="bold"
        tools:text="CreateEvent"/>

    <com.app.gitevent.customViews.GitTextView
        android:id="@+id/txtVw_branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtVw_eventName"
        android:layout_marginTop="@dimen/margin_eight"
        android:layout_toRightOf="@id/txtVw_initial"
        android:gravity="center_horizontal"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/font_sixteen"
        tools:text="Master"/>

    <com.app.gitevent.customViews.GitTextView
        android:id="@+id/txtVw_dateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/margin_eight"
        android:layout_marginRight="@dimen/margin_eight"
        android:layout_marginTop="@dimen/margin_eight"
        android:gravity="center_horizontal"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/font_twelve"
        tools:text="Dec 13, 2016"/>

    <com.app.gitevent.customViews.GitTextView
        android:id="@+id/txtVw_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtVw_branch"
        android:layout_marginTop="@dimen/margin_twenty"
        android:layout_toRightOf="@id/txtVw_initial"
        android:maxLines="2"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/font_sixteen"
        tools:text="This is a test commit and just used for testing"/>

    <com.app.gitevent.customViews.GitTextView
        android:id="@+id/txtVw_actor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtVw_branch"
        android:layout_marginTop="@dimen/margin_four"
        android:layout_toRightOf="@id/txtVw_initial"
        android:maxLines="2"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/font_sixteen"
        tools:text="Actor ID: nks2180"/>

    <com.app.gitevent.customViews.GitTextView
        android:id="@+id/txtVw_payloadReference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtVw_branch"
        android:layout_marginTop="@dimen/margin_four"
        android:layout_toRightOf="@id/txtVw_initial"
        android:maxLines="2"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/font_sixteen"
        tools:text="Payload Reference:  12345"/>

    <com.app.gitevent.customViews.GitTextView
        android:id="@+id/txtVw_pushId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtVw_branch"
        android:layout_marginTop="@dimen/margin_four"
        android:layout_toRightOf="@id/txtVw_initial"
        android:maxLines="2"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/font_sixteen"
        tools:text="Push ID:  12345"/>

    <com.app.gitevent.customViews.GitTextView
        android:id="@+id/txtVw_actorUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtVw_branch"
        android:layout_marginTop="@dimen/margin_four"
        android:layout_toRightOf="@id/txtVw_initial"
        android:maxLines="2"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/font_sixteen"
        tools:text="www.google.com"/>

    <com.app.gitevent.customViews.GitTextView
        android:id="@+id/txtVw_repoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtVw_branch"
        android:layout_marginTop="@dimen/margin_four"
        android:layout_toRightOf="@id/txtVw_initial"
        android:maxLines="2"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/font_sixteen"
        tools:text="Repo Name: Master"/>

    <com.app.gitevent.customViews.GitTextView
        android:id="@+id/txtVw_repoId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtVw_branch"
        android:layout_marginTop="@dimen/margin_four"
        android:layout_toRightOf="@id/txtVw_initial"
        android:maxLines="2"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/font_sixteen"
        tools:text="RepoID:  12345"/>


    <com.app.gitevent.customViews.GitTextView
        android:id="@+id/txtVw_payloadHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtVw_branch"
        android:layout_marginTop="@dimen/margin_four"
        android:layout_toRightOf="@id/txtVw_initial"
        android:maxLines="2"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/font_sixteen"
        tools:text="Payload Head ID:  12345"/>

    <com.app.gitevent.customViews.GitTextView
        android:id="@+id/txtVw_repoIsPublic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtVw_branch"
        android:layout_marginTop="@dimen/margin_four"
        android:layout_toRightOf="@id/txtVw_initial"
        android:maxLines="2"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/font_sixteen"
        tools:text="true"/>


</LinearLayout>
