<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_activity"
              android:gravity="center_horizontal"
                android:padding="@dimen/margin_twenty"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/imgVw_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_thirtySix"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:transitionName="@string/transition_login_image"/>

    <LinearLayout
        android:id="@+id/lnrLyt_login"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="@dimen/margin_twenty"
        android:layout_marginTop="@dimen/margin_thirtyTwo"
        android:background="@drawable/dialog_background"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/margin_twelve"
        android:layout_below="@id/imgVw_icon"
        android:transitionName="@string/transition_login_btn"
        android:transitionGroup="false">

        <EditText
            android:id="@+id/edtTxt_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_twenty"
            android:layout_marginTop="@dimen/margin_twelve"
            android:hint="Enter Git UserName"
            android:textSize="@dimen/font_sixteen"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:padding="@dimen/margin_twelve"
            android:singleLine="true"
            android:imeOptions="actionGo"
            android:textColorHint="@color/dark_grey"></EditText>

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_eight"
        android:paddingLeft="@dimen/margin_fifty"
        android:paddingRight="@dimen/margin_fifty"
        android:paddingTop="@dimen/margin_eight"
        android:maxLines="1"
        android:imeOptions="actionGo"
        android:text="Submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="245dp"
        android:theme="@style/LoginButton"/>

</RelativeLayout>
