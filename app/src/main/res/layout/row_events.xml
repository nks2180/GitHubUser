<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_sixteen"
        android:paddingLeft="@dimen/margin_eight"
        android:paddingRight="@dimen/margin_eight"
        android:paddingTop="@dimen/margin_sixteen"
        android:background="@drawable/selector_white_rectangle"
        tools:ignore="RtlHardcoded">

        <com.app.gitevent.customViews.GitTextView
            android:id="@+id/txtVw_dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_eight"
            android:layout_marginLeft="@dimen/margin_eight"
            android:gravity="center"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/font_twelve"
            tools:text="CE"/>

        <ImageView
            android:id="@+id/imgVw_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="@dimen/margin_twelve"
            android:gravity="center"/>

        <com.app.gitevent.customViews.GitTextView
            android:id="@+id/txtVw_eventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/txtVw_dateTime"
            android:layout_toRightOf="@id/imgVw_avatar"
            android:textColor="@color/black"
            android:textSize="@dimen/font_eighteen"
            tools:text="CreateEvent"/>

        <com.app.gitevent.customViews.GitTextView
            android:id="@+id/txtVw_branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtVw_eventName"
            android:layout_marginTop="@dimen/margin_four"
            android:layout_toRightOf="@id/imgVw_avatar"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/font_fourteen"
            tools:text="Master"/>

        <com.app.gitevent.customViews.GitTextView
            android:id="@+id/txtVw_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtVw_branch"
            android:layout_marginTop="@dimen/margin_four"
            android:layout_toRightOf="@id/imgVw_avatar"
            android:maxLines="2"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/font_fourteen"
            tools:text="This is a test commit and just used for testing"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>